<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fillWidth="true" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane prefHeight="803.0" prefWidth="1282.0">
         <children>
            <TableView fx:id="tableOfProducts" layoutX="471.0" layoutY="65.0" prefHeight="505.0" prefWidth="364.0">
              <columns>
                <TableColumn fx:id="ProductName" prefWidth="215.0" text="Nazwa">
                    <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="ProductPrice" prefWidth="90.0" text="Cena">
                    <cellValueFactory><PropertyValueFactory property="price" /></cellValueFactory>
                </TableColumn>
                  <TableColumn fx:id="ProductAmount" prefWidth="58.0" text="Ilość">
                      <cellValueFactory><PropertyValueFactory property="amount" /></cellValueFactory>
                  </TableColumn>
              </columns>
            </TableView>
            <Label layoutX="471.0" layoutY="14.0" text="Produkty">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
             <TableView fx:id="tableOfPack" layoutX="74.0" layoutY="65.0" prefHeight="505.0" prefWidth="364.0">
              <columns>
                <TableColumn fx:id="PackName" prefWidth="267.0" text="Nazwa">
                    <cellValueFactory><PropertyValueFactory property="name" /></cellValueFactory>
                </TableColumn>

                <TableColumn fx:id="PackPrice" prefWidth="96.0" text="Cena">
                    <cellValueFactory><PropertyValueFactory property="price" /></cellValueFactory>
                </TableColumn>
              </columns>
            </TableView>
            <Button fx:id="AddNewPack" layoutX="74.0" layoutY="584.0" mnemonicParsing="false" onMouseClicked="#addNewPack" text="Dodaj nowy zestaw" />
            <Label layoutX="74.0" layoutY="14.0" text="Zestawy">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button fx:id="removePack" layoutX="340.0" layoutY="584.0" mnemonicParsing="false" onMouseClicked="#removePack" text="Usuń zestaw" />
            <TableView fx:id="tableOfPackContent" layoutX="868.0" layoutY="65.0" prefHeight="505.0" prefWidth="364.0">
               <columns>
                  <TableColumn fx:id="PackPOProductID" prefWidth="215.0" text="Nazwa produktu">
                     <cellValueFactory>
                        <PropertyValueFactory property="productId" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="PackPOAmount" prefWidth="58.0" text="Ilość">
                     <cellValueFactory>
                        <PropertyValueFactory property="amount" />
                     </cellValueFactory>
                  </TableColumn>
                  <TableColumn fx:id="PackPOPrice" prefWidth="90.0" text="Cena">
                     <cellValueFactory>
                        <PropertyValueFactory property="price" />
                     </cellValueFactory>
                  </TableColumn>
               </columns>
            </TableView>
            <Label layoutX="868.0" layoutY="14.0" text="Zawartość Zestawu">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <Button fx:id="addNewProduct" layoutX="471.0" layoutY="584.0" mnemonicParsing="false" onMouseClicked="#addNewProduct" text="Dodaj produkt" />
            <Button fx:id="removeProductFromPack" layoutX="1060.0" layoutY="584.0" mnemonicParsing="false" onMouseClicked="#removeProductFromPack" text="Usuń produkt z zestawu" />
            <Button fx:id="addProductToPack" layoutX="868.0" layoutY="584.0" mnemonicParsing="false" onMouseClicked="#addProductToPack" text="Dodaj produkt do zestawu" />
            <Button fx:id="removeProduct" layoutX="730.0" layoutY="584.0" mnemonicParsing="false" onMouseClicked="#removeProduct" text="Usuń produkt" />
            <Button fx:id="goBack" layoutX="14.0" layoutY="714.0" mnemonicParsing="false" onMouseClicked="#goBack" text="Cofnij" />
         </children>
      </AnchorPane>
   </children>
</VBox>
